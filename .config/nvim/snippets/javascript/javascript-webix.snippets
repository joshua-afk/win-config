snippet webix-each-row 'METHOD: datatable, iterates over all rows in the table'
		let employee_ids = []
		const trainingDocumentGranteeGrid = $$('customTrainingDocumentGranteesGrid').getGrid()
		trainingDocumentGranteeGrid.eachRow(function(row){ 
			const currentRow = trainingDocumentGranteeGrid.getItem(row)
			employee_ids.push(currentRow['EmployeeId'])
		})
snippet webix-define 'METHOD: view, redefines a single configuration property'
		// redefines the width of the list
		$$("mylist").define("width", 300);
		$$("mylist").resize();
		
		// changes the label of the button
		$$("button1").define("label", "New value");
		$$("button1").refresh();
		
		// changes multiple properties at once
		$$("text2").define({
				value:"123",
				label:"New label"
		});
		$$("text2").refresh();
